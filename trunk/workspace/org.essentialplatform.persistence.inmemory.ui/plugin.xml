<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.0"?>
<plugin>
   <extension
         point="org.eclipse.search.searchPages">
      <page
            canSearchEnclosingProjects="false"
            class="org.essentialplatform.persistence.inmemory.InMemorySearchPage"
            enabled="true"
            id="org.essentialplatform.persistence.inmemory.InMemorySearchPage"
            label="In Memory Object Store Search"
            showScopeSection="false"/>
   </extension>
   <extension
         point="org.eclipse.search.searchResultViewPages">
      <viewPage
            class="org.essentialplatform.persistence.inmemory.InMemorySearchResultPage"
            id="org.essentialplatform.persistence.inmemory.InMemorySearchResultPage"
            searchResultClass="org.essentialplatform.persistence.inmemory.InMemorySearchQuery"/>
   </extension>


</plugin>
